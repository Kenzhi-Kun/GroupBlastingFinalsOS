<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <TextView
        android:id="@+id/topBar"
        android:layout_width="426dp"
        android:layout_height="91dp"
        android:background="@drawable/blue_rectange_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomBar"
        android:layout_width="434dp"
        android:layout_height="85dp"
        android:background="@drawable/blue_rectange_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="My Appointments"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/userListOfAppointment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/appointmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabTitle" />

    <Button
        android:id="@+id/appointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Make an Appointment"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/appointment_home_client9"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/calendarIconText"
        app:layout_constraintEnd_toEndOf="@+id/calendarIconText"
        app:layout_constraintStart_toStartOf="@+id/calendarIconText"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/outline_calendar_month_24" />

    <TextView
        android:id="@+id/calendarIconText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPOINTMENT"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toStartOf="@+id/uploadIconText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_home_client9" />
    <ImageView
        android:id="@+id/uploadIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/uploadIconText"
        app:layout_constraintEnd_toEndOf="@+id/uploadIconText"
        app:layout_constraintStart_toStartOf="@+id/uploadIconText"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/outline_arrow_circle_up_24" />

    <TextView
        android:id="@+id/uploadIconText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOADS"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toStartOf="@+id/filesIconText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/calendarIconText"
        app:layout_constraintTop_toBottomOf="@+id/uploadIcon" />

    <ImageView
        android:id="@+id/filesIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/filesIconText"
        app:layout_constraintEnd_toEndOf="@+id/filesIconText"
        app:layout_constraintStart_toStartOf="@+id/filesIconText"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/baseline_folder_open_24" />

    <TextView
        android:id="@+id/filesIconText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILES"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/uploadIconText"
        app:layout_constraintTop_toBottomOf="@+id/filesIcon" />

    <TextView
        android:id="@+id/welcome12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Welcome,"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Anonymous"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome12" />

    <TextView
        android:id="@+id/logoutTextBtn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>